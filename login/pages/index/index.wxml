<view class='container-fill'>
  <view class='scroll-fullpage' bindtouchstart="scrollTouchstart" bindtouchmove="scrollTouchmove" bindtouchend="scrollTouchend" style="transform:translateY(-{{scrollindex*100}}%)">
    <!-- 第一页 -->
    <view class="section  {{scrollindex==0?'active':''}}" style="background: white;">
      <view class='center'>
        <text class='title'>登录</text>
      </view>
      <image class='logo' src='../images/icon@2x.png'></image>

      <view class='input-view' animation='{{inputViewAnimation}}'>
        <input animation='{{userInputAnimation}}' focus='{{userInputFocus}}' bindtap='userBindtap' disabled='{{userInputDisabled}}'  class='input-user' value='{{user}}' type='number' bindinput='userBindinput' placeholder='输入员工编号' confirm-type='next' maxlength='8'></input>

        <input bindtap='pwdBindtap' disabled='{{pwdInputDisabled}}' animation='{{pwdInputAnimation}}' class='input-pwd' value='{{pwd}}' focus='{{pwdInputFocus}}' password='true' bindinput='pwdBindinput' placeholder='输入员工密码' confirm-type='done'></input>
      </view>


      <view bindtap='loginBindtap' animation='{{loginAnimation}}' class='separation-line'>
        <text class='login-text'>登录</text>
      </view>
    </view>
    <!-- 第二页 -->
    <view class="section {{scrollindex==1?'active':''}}" style="background: #00CC66;">
      <text class="section-maintitle">测试测试测试2</text>
      <text class="section-subtitle">cinoLiu--2</text>
    </view>
  </view>
</view>