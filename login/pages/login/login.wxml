    <view class="section page0 {{scrollindex==0?'active show':''}}">
      <view class='center'>
        <text class='title'>登录</text>
      </view>
      <image class='logo' src='../images/icon@2x.png'></image>

      <view class='input-view' animation='{{inputViewAnimation}}'>
        <input animation='{{userInputAnimation}}' focus='{{userInputFocus}}' catchtouchstart="userBindtap" disabled='{{userInputDisabled}}' class='input-user' value='{{user}}' type='number' bindinput='userBindinput' placeholder='输入员工编号' confirm-type='next' maxlength='8'></input>

        <input catchtouchstart="pwdBindtap" disabled='{{pwdInputDisabled}}' animation='{{pwdInputAnimation}}' class='input-pwd' value='{{pwd}}' focus='{{pwdInputFocus}}' password='true' bindinput='pwdBindinput' placeholder='输入员工密码' confirm-type='done'></input>
      </view>


      <view catchtouchstart="loginBindtap" animation='{{loginAnimation}}' class='separation-line'>
        <text class='login-text'>登录</text>
      </view>
    </view>