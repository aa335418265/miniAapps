}

.card-box-title2 {
   font-weight: bold; 
   color: #353535;
}

.card-box{
  margin:10rpx 20rpx 0rpx 20rpx; 
  padding: 16rpx;
   border-radius: 8rpx; 
  background-color: white;
  text-align: left;
  overflow: hidden;
  transition: all 1s linear;
}
.card-box-no-show{

  height: 44rpx;
  transition: all 1s linear;
}

.task-view-hide{
  height: 0rpx;
}

.task-view-show{
  height: auto;
}