@keyframes mymove{
	from {
		transform: translateY(-400rpx) scale(0.5) rotateY(90deg);
	}
	to {
		transform: translateY(0) scale(1) rotateY(0);
	}
}

@keyframes FFFFFF-DeDeDe {
   0% {background-color: #ffffff;}
  100% {background-color: #dedede;}
}

@keyframes DeDeDe-FFFFFF {
   0% {background-color: #dedede;}
  100% {background-color: #ffffff;}
}

.pressDownAnimation {
  animation:FFFFFF-DeDeDe 0.5s;
  animation-fill-mode: forwards;
  -o-animation-fill-mode: forwards;
  -webkit-animation-fill-mode: forwards;
}

.pressUpAnimation {
  animation:DeDeDe-FFFFFF 0.5s;
  animation-fill-mode: forwards;
  -o-animation-fill-mode: forwards;
  -webkit-animation-fill-mode: forwards;
}





